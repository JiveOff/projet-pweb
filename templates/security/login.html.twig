{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="hero is-primary is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column card is-5-tablet is-4-desktop is-3-widescreen">
			{% if error %}
				<div class="message is-danger">
					<div class="message-body">
						{{ error.messageKey|trans(error.messageData, 'security') }}
					</div>
				</div>
			{% endif %}

			{% if app.user %}
				<div class="message is-success">
					<div class="message-body">
						Connect√© en tant que {{ app.user.name }}.
					</div>
				</div>
			{% else %}

				<div class="message is-info">
					<div class="message-body">
						Utilisateur: <b>test[1-3]@location.com</b><br />Mot de passe: <b>test</b>
					</div>
				</div>

				<form action="" method="post">
					<div class="field">
						<label for="" class="label">Adresse e-mail</label>
						<div class="control has-icons-left">
							<input type="email" placeholder="ex: admin@location.com" name="email" id="inputEmail" value="{{ last_username }}" class="input" required autofocus>
							<span class="icon is-small is-left">
							<i class="fa fa-envelope"></i>
							</span>
						</div>
					</div>
					<div class="field">
						<label for="" class="label">Mot de passe</label>
						<div class="control has-icons-left">
							<input type="password" placeholder="*******" name="password" id="inputPassword" class="input" required>
							<span class="icon is-small is-left">
							<i class="fa fa-lock"></i>
							</span>
						</div>
					</div>
					<div class="field">
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<button class="button is-primary" type="submit">
							Se connecter
						</button>
					</div>
				</form>
			{% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}
